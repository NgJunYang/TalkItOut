{
  "name": "talkitout",
  "version": "1.0.0",
  "description": "AI-powered support system for Singapore students",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=@talkitout/api",
    "dev:web": "npm run dev --workspace=@talkitout/web",
    "build": "npm run build --workspaces --if-present",
    "start": "npm run start --workspace=@talkitout/api",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "seed": "npm run seed --workspace=@talkitout/api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
