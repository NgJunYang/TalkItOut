# Server
NODE_ENV=development
PORT=4000

# Database
MONGO_URI=mongodb://mongo:27017/talkitout

# JWT
# IMPORTANT: Use a strong random string (min 32 chars). Changing this invalidates all existing tokens.
JWT_SECRET=your_secure_random_jwt_secret_here_min_32_chars
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8081

# Google Gemini AI
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# AI_MODEL=gemini-2.0-flash-exp (default - latest experimental model)

ALLOW_EXTERNAL_PII=false

# Crisis Resources (Singapore)
CRISIS_EMERGENCY=999
CRISIS_SOS_LINE=1767
CRISIS_SOS_TEXT=9151 1767

# ElevenLabs Voice API
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=0
ELEVENLABS_VOICE_ID=Rachel
ELEVENLABS_TTS_LATENCY=2
ELEVENLABS_TTS_FORMAT=audio/mpeg
ELEVENLABS_API_BASE=https://api.elevenlabs.io
ELEVENLABS_STT_MODEL=eleven_multilingual_v2
MAX_STT_SECONDS=60
